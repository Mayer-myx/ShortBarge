<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context=".view.ForgetPwdActivity">

    <ImageView
        android:layout_width="126dp"
        android:layout_height="47.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/group" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="17dp"
        android:text="ENGINEERING"
        android:textColor="@color/deepsoft_text_red"
        android:textSize="12sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/archivo_bold"
        android:letterSpacing="0.1"
        android:text="TOMORROW"
        android:textColor="@color/deepsoft_text_red"
        android:textSize="12sp" />


    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="245dp"
        android:background="@drawable/round_rectangle_white_opc"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="20sp"
            android:textColor="@color/deepsoft_config_color_pure_black"
            android:includeFontPadding="false"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="67dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrator Name："
            android:textColor="@color/deepsoft_text_black"
            android:textSize="12sp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="67dp"/>
        <TextView
            android:id="@+id/forpwd_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LiXiaoming"
            android:textColor="@color/deepsoft_text_black"
            android:textSize="12sp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="255dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrator Password："
            android:textColor="@color/deepsoft_text_black"
            android:textSize="12sp"
            android:layout_marginTop="114dp"
            android:layout_marginLeft="67dp"/>
        <TextView
            android:id="@+id/forpwd_tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="808578924"
            android:textColor="@color/deepsoft_text_black"
            android:textSize="12sp"
            android:layout_marginTop="114dp"
            android:layout_marginLeft="255dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#FF9F11"
            android:textSize="10sp"
            android:layout_marginTop="152dp"
            android:layout_marginLeft="67dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  用户名密码为管理员统一管理，请联系管理员修改密码"
            android:textColor="@color/deepsoft_text_gray"
            android:textSize="10sp"
            android:layout_marginTop="152dp"
            android:layout_marginLeft="67dp"/>

        <TextView
            android:id="@+id/forpwd_tv_sercon"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="108dp"
            android:background="@drawable/round_rectangle_red"
            android:gravity="center"
            android:text="服务器配置"
            android:textSize="12sp"
            android:textColor="@color/deepsoft_config_color_white" />
        <TextView
            android:id="@+id/forpwd_tv_confirm"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="23dp"
            android:layout_marginRight="108dp"
            android:background="@drawable/round_rectangle_red"
            android:gravity="center"
            android:text="确定"
            android:textSize="12sp"
            android:textColor="@color/deepsoft_config_color_white" />
    </RelativeLayout>

</RelativeLayout>