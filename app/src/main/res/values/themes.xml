<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ShortBarge" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepsoft_main_red</item>
        <item name="colorPrimaryVariant">@color/color_red</item>
        <item name="colorOnPrimary">@color/menu_white_normal</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deepsoft_main_red</item>
        <item name="colorSecondaryVariant">@color/color_red</item>
        <item name="colorOnSecondary">@color/menu_white_normal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/archivo_regular</item>

        <!--无Title-->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Customize your theme here. -->

        <!--应用的主要文字颜色，actionBar的标题文字默认使用该颜色-->
        <item name="android:textColorPrimary">@color/deepsoft_config_color_white</item>


        <!-- 按钮的style -->
        <item name="android:imageButtonStyle">@style/ImageButton</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
    </style>


    <!--窗体背景，这个背景能在第一时间显示, 避免启动时白屏，黑屏问题-->
    <style name="Theme.ShortBarge.Launch">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--*********************************************
     *                  按钮样式                    *
     **********************************************-->
    <style name="ImageButton" parent="ImageButtonBase">
        <item name="android:background">@color/deepsoft_config_color_transparent</item>
    </style>

    <style name="Button" parent="ButtonBase">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <!--**********************************************
    *                  BaseStyle                    *
    **********************************************-->
    <style name="ActionBarBase" parent="android:Widget.Holo.Light.ActionBar" />

    <style name="ActionBarTitleTextBase" parent="android:TextAppearance.Holo.Widget.ActionBar.Title" />

    <style name="ListViewBase" parent="android:Widget.Holo.Light.ListView">
        <item name="android:background">@color/deepsoft_config_color_transparent</item>
    </style>

    <style name="GridViewBase" parent="android:Widget.Holo.Light.GridView" />

    <style name="ImageButtonBase" parent="android:Widget.Holo.Light.ImageButton" />

    <style name="ButtonBase" parent="android:Widget.Holo.Light.Button" />

    <style name="EditTextBase" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="AutoCompleteTextViewBase" parent="android:Widget.Holo.Light.AutoCompleteTextView" />

    <style name="DropDownListViewBase" parent="android:Widget.Holo.Light.ListView.DropDown" />

    <style name="TextAppearanceBase" parent="android:TextAppearance.Holo" />

    <!--Translucent，DeepSoft半透明主题-->
    <style name="Theme.ShortBarge.Translucent">
        <item name="colorPrimaryDark">@color/deepsoft_config_color_pure_black</item>
        <item name="android:windowBackground">@color/deepsoft_config_color_transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>　　　　　
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

</resources>